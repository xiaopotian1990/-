        {{ if(it.length == 0){it.push({ID:"",Name:"请选择"});} }}
        {{ for(var item in it){ }}
        <option value="{{= it[item].ID }}">{{= it[item].Name }}</option>
        {{ } }}
    </script>
    <!--咨询情况-->
    <script class="callbk-zxqk-temp" type="text/html">
        {{for(var item in it){ }}
