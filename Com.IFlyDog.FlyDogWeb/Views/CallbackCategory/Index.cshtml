<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>回访类型</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link href="~/lay_component/plugins/layui/css/layui.css" rel="stylesheet" media="all" />
    <link href="~/lay_component/css/layer.css" rel="stylesheet" />
    <link href="~/lay_component/css/global.css" rel="stylesheet" />
    <link href="~/lay_component/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/lay_component/css/table.css" rel="stylesheet" />
</head>

<body>
    <div class="admin-main" id="callbackCategoryhtml">
        <blockquote class="layui-elem-quote">
            <a href="javascript:;" class="layui-btn layui-btn-small" id="add">
                <i class="layui-icon">&#xe608;</i> 添加回访类型
            </a>
        </blockquote>

        <fieldset class="layui-elem-field">
            <legend>回访类型信息</legend>
            <div class="layui-field-box">

            </div>
            <script id="callbackCategory_template" type="text/html">
                <table class="site-table table-hover">
                    <thead>
                        <tr>
                            <th>回访类型编号</th>
                            <th>回访类型名称</th>
                            <th>回访类型状态</th>
                            <th>回访类型描述</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{ for(var prop in it) { }}
                        <tr class="" deptInfoId="{{= it[prop].ID }}">
                            <td>{{= i++ }}</td>
                            <td>{{= it[prop].Name }}</td>
                            <td>
                                {{ if (it[prop].Status !=0){ }}
                                <i class="layui-icon" style="color: green;"></i>
                                {{ } else { }}
                                <i class="layui-icon" style="color: red;">ဇ</i>
                                {{ } }}

                            </td>
                            <td>{{= it[prop].Remark }}</td>
                            <td class="callbackCategoryEditAndDisableTd">
                                <a class="layui-btn layui-btn-mini edit" id="InfoiEdit" infoiEditId="{{= it[prop].ID }}"><i></i>编辑</a>

                                {{ if (it[prop].Status ==0){ }}
                                <a href="javascript:;" status="1" stopID="{{= it[prop].ID }}" class="layui-btn layui-btn-normal layui-btn-mini EditStopBut">启用</a>
                                {{ } else { }}

                                <a href="javascript:;" status="0" stopID="{{= it[prop].ID }}" class="layui-btn layui-btn-danger layui-btn-mini EditStopBut">停用</a>


                                {{ } }}
                            </td>
                        </tr>

                        {{ } }}
                    </tbody>
                </table>
            </script>

        </fieldset>
    </div>
    @*<script src="~/lay_component/plugins/layui/layui.js"></script>*@
    <!--公共JS-->
    <script src="~/lay_component/js/jquery-2.0.3.min.js"></script>
    <script src="~/lay_component/js/hcommon.js"></script>
    <script src="~/doT-master/doT-master/doT.min.js"></script>
    <script src="~/lay_component/plugins/layui/lay/dest/layui.all.js"></script>
    <script src="~/lay_component/plugins/layui/lay/lib/jquery.js"></script>
    <script src="~/lay_component/plugins/layui/lay/modules/layer.js"></script>
    <!--页面功能JS-->
    <script src="~/lay_component/sampleJs/callbackCategory.js"></script>
    <!--添加回访类型信息html-->
    <div id="showAddInfo_div"></div>
    <script id="showcallbackCategoryAddInfo_template" type="text/x-dot-template">

        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
            <legend>添加回访类型</legend>
        </fieldset>

        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">名称</label>
            <div class="layui-input-inline ">
                <input type="text" id="callbackCategoryinfoAddName" lay-verify="title" autocomplete="off" placeholder="请输入回访类型名称" class="layui-input ">
            </div>
        </div>
        <div class="layui-form-item layui-form-text" style="margin-left: 120px">
            <label class="layui-form-label">描述</label>
            <div class="layui-input-inline">
                <textarea id="callbackCategoryinfoAddRemark" placeholder="请输入描述内容" class="layui-textarea"> </textarea>
            </div>
        </div>
        <div class="layui-form-item " style="margin-left: 219px;margin-top: 40px">
            <button class="layui-btn layui-btn-normal commitT">确认提交</button>
            <button class="layui-btn layui-btn-danger closeT">取消关闭</button>
        </div>
    </script>

    <!--修改回访类型信息html-->
    <script id="showcallbackCategoryEditInfo_template" type="text/x-dot-template">

        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
            <legend>修改回访类型</legend>
        </fieldset>
        <div class="layui-form-item" style="margin-left: 120px" hidden>
            <label class="layui-form-label">编号</label>
            <div class="layui-input-inline ">
                <input type="text" id="callbackCategoryinfoEditID" lay-verify="title" autocomplete="off" disabled="disabled" value="{{=it.ID}}" class="layui-input ">
            </div>
        </div>
        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">名称</label>
            <div class="layui-input-inline ">
                <input type="text" id="callbackCategoryinfoEditName" lay-verify="title" autocomplete="off" placeholder="请输入回访类型名称" value="{{=it.Name}}" class="layui-input ">
            </div>
        </div>
        <div class="layui-form-item layui-form-text" style="margin-left: 120px">
            <label class="layui-form-label">描述</label>
            <div class="layui-input-inline">
                <textarea id="callbackCategoryinfoEditRemark" placeholder="请输入描述内容" class="layui-textarea">{{=it.Remark}} </textarea>
            </div>
        </div>
        <div class="layui-form-item " style="margin-left: 219px;margin-top: 40px">
            <button class="layui-btn layui-btn-normal commitT">确认提交</button>
            <button class="layui-btn layui-btn-danger closeT">取消关闭</button>
        </div>
    </script>

    <div id="showEditInfo_div"></div>
</body>

</html>