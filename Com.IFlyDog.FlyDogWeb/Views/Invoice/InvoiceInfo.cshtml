                                    <div class="layui-input-inline">
                                        <input class="layui-input" placeholder="开始日" id="beginDate">
                                    </div>
                                    <div class="layui-input-inline">
                                        <input class="layui-input" placeholder="截止日" id="endDate">
                                    </div>
                                </div>
