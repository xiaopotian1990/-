@using Com.IFlyDog.CommonDTO
@using Com.IFlyDog.FlyDogWeb.Helper
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>结算记录</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Styles/Public/base-1.0.css" rel="stylesheet" />
    <link href="~/lay_component/plugins/layui/css/layui.css" rel="stylesheet" media="all" />
    <link href="~/lay_component/css/global.css" rel="stylesheet" />
  
</head>
<body>
<div class="admin-main">
    <!--tab导航-->
    <fieldset class="layui-elem-field ">
        <legend>结算记录</legend>
        <div class="layui-form m-20 clearfix">
            <div class="fl">
                <label class="layui-form-label">收银日期:</label>
                <div class="layui-input-inline">
                    <input class="layui-input" name="settstartTime" placeholder="结算日期起始" onclick="layui.laydate({elem: this, festival: true})">
                </div>
                <div class="layui-input-inline">
                    <input class="layui-input" name="settendTime" placeholder="结算日期结束" onclick="layui.laydate({elem: this, festival: true})">
                </div>
            </div>
            <div class="fl">
                <label class="layui-form-label">用户名称:</label>
                <div class="layui-input-inline">
                    <input class="layui-input" name="settCuName" placeholder="请输入客户名称">
                </div>
            </div>

            <div class="fl">
                <label class="layui-form-label">选择医院:</label>
                <div class="layui-input-inline">
                    @Html.SelectCategoryByHospital(SelectType.Hospital, "SettHospital", "SettHospital")
                </div>
            </div>
            <span class="layui-btn  Settl-search-btn fr">查询</span>
        </div>
        <div class="layui-field-box">
            <table class="site-table table-hover">
                <thead>
                    <tr>
                        <th>操作人编号</th>
                        <th>操作用户</th>
                        <th>结算时间</th>
                        <th>开始时间</th>
                        <th>结束时间</th>
                        <th>现金</th>
                        <th>刷卡</th>
                        <th>总金额</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody class="tb-settlement"></tbody>
            </table>
            <!--分页容器-->
            <div class="fr" id="pageDiv"></div> 
        </div>
    </fieldset>
</div>

<div class="doT-data-template">
        <script class="settlement-temp" type="text/x-dot-template">
            {{for (var item in it){}}
            <tr>
                <th>{{= it[item].CreateUserID}}</th>
                <th>{{= it[item].CreateUserName}}</th>
                <th>{{= it[item].CreateTime == null ? "-":it[item].CreateTime.slice(0,10)}}</th>
                <th>{{= it[item].StartTime == null ? "-":it[item].StartTime.slice(0,10)}}</th>
                <th>{{= it[item].EndTime == null ? "-":it[item].EndTime.slice(0,10)}}</th>
                <th>{{= it[item].Cash}}</th>
                <th>{{= it[item].Card}}</th>
                <th>{{= it[item].Amount}}</th>
                <td><span class="layui-btn layui-btn-small layui-btn-normal ">打印</span></td>
            </tr>
            {{ } }}
        </script>
    </div> 
<script src="~/lay_component/js/jquery-2.0.3.min.js"></script>
<script src="~/lay_component/js/hcommon.js"></script>
<script src="~/Scripts/FlyDog.Common.js"></script>
<script src="~/doT-master/doT-master/doT.min.js"></script>
<script src="~/lay_component/plugins/layui/layui.js"></script>
<script src="~/lay_component/sampleJs/CashinerDesk/SettlementRecord.js"></script> 
</body>
</html>