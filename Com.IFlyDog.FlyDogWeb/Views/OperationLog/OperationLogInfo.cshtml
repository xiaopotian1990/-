@using Com.IFlyDog.FlyDogWeb.Helper
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>系统日志管理</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Styles/Public/base-1.0.css" rel="stylesheet" />
    <link href="~/lay_component/plugins/layui/css/layui.css" rel="stylesheet" media="all" />
    <link href="~/lay_component/css/global.css" rel="stylesheet" />
</head>
<body>
    <div class="admin-main">
        <fieldset class="layui-elem-field">
            <legend>系统日志管理</legend>
            <div class="layui-field-box">
                <div class="layui-form">
                    <input type="hidden" id="pageCountValue" lay-verify="title" autocomplete="off" class="layui-input " value="">
                    <div class="layui-form-item">
                        <div class="fl">
                            <div class="layui-form-item fl">
                                <label class="layui-form-label">操作日期</label>

                                <div class="layui-input-inline">
                                    <input class="layui-input" placeholder="开始日" id="beginDate" onclick="layui.laydate({elem: this, festival: true})">
                                </div>
                                <div class="layui-input-inline">
                                    <input class="layui-input" placeholder="截止日" id="endDate" onclick="layui.laydate({elem: this, festival: true})">
                                </div>
                            </div>
                        </div>
                        <div class="fl">
                            <label class="layui-form-label">账号</label>
                            <input type="text" name="account" lay-verify="title" id="account" autocomplete="off" placeholder="请输入账号" style="width:130px;" class="layui-input">
                        </div>
                        <div class="fl">
                            <label class="layui-form-label">日志类型</label>
                            <div class="layui-input-inline">
                                <select name="LogType" class="logType-select">
                                    <option value="-1">请选择</option>
                                </select>
                            </div>
                        </div>
                        <div class="fl">
                            <label class="layui-form-label">用户名称</label>
                            <input type="text" name="account" lay-verify="title" id="nameValue" autocomplete="off" placeholder="请输入用户名称" style="width:130px;" class="layui-input">
                        </div>

                        <button class="layui-btn fr" id="subtmValue" onclick="onClickBtn()">查询</button>

                    </div>
                </div>
                <table class="site-table table-hover">
                    <thead>
                        <tr>
                            <th width="25%">类型</th>
                            <th width="25%">操作用户</th>
                            <th width="25%">操作时间</th>
                            <th width="25%">操作</th>
                        </tr>
                    </thead>
                    <tbody class="operationLog-table"></tbody>
                </table>
                <!--分页容器-->
                <div id="pageDiv"></div>
            </div>
        </fieldset>
        <div class="charge-pop hide">
            <form class="layui-form">
                <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
                    <legend>系统日志管理</legend>
                </fieldset>
                <hidden name="operationLogId"></hidden>
                <div class="layui-form-item" style="padding-left:0;">
                    <label class="layui-form-label">名称</label>
                    <div class="layui-input-inline">
                        <input type="text" class="layui-input" name="name" placeholder="操作用户名称" />
                    </div>
                </div>

                <div class="layui-form-item" style="padding-left:0;">
                    <label class="layui-form-label">详细</label>
                    <div class="layui-input-inline " style="width:490px;">
                        <textarea type="text" class="layui-textarea remark" name="remark" lay-verify="title" autocomplete="off" placeholder="详细信息" style="height:260px;"></textarea>
                    </div>
                </div>
                <div class="m-20 clearfix">
                    <span class="layui-btn submit-btn fr">关闭</span>
                </div>
            </form>
        </div>
        <div class="dot-tmp">
            <script class="operationLog-tmp" type="text/x-dot-template">
                {{ for(var item in it){ }}
                <tr>
                    <td>{{= it[item].TypeName }}</td>
                    <td>{{= it[item].Name }}</td>
                    <td>{{= it[item].CreateTime }}</td>
                    <td>
                        <span class="layui-btn layui-btn-mini btn-edit" data-id="{{= it[item].LogID }}">查看详情</span>
                    </td>
                </tr>
                {{ } }}
            </script>
            <script class="logType-tmp" type="text/x-dot-template">
                <option value="-1">请选择</option>
                {{~ it:item }}
                <option value="{{= item.ID }}">{{= item.Name }}</option>
                {{~ }}
            </script>
        </div>
    </div>
    <script src="~/lay_component/js/jquery-2.0.3.min.js"></script>
    <script src="~/lay_component/js/hcommon.js"></script>
    <script src="~/Scripts/FlyDog.Common.js"></script>
    <script src="~/doT-master/doT-master/doT.min.js"></script>
    <script src="~/lay_component/plugins/layui/layui.js"></script>

    <script src="~/lay_component/sampleJs/operationLog.js"></script>
</body>
</html>
