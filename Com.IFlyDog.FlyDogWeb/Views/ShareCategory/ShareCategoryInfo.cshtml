@using Com.IFlyDog.FlyDogWeb.Helper
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>分享家分类管理</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Styles/Public/base-1.0.css" rel="stylesheet" />
    <link href="~/lay_component/plugins/layui/css/layui.css" rel="stylesheet" media="all" />
    <link href="~/lay_component/css/global.css" rel="stylesheet" />
    <style>
        .layui-upload-button input[type=button]{cursor:pointer;}
        [name=icon] {width:80px;height:60px;}
        .layui-input-block{margin-left:130px;}
        .layui-form-label{width:100px;}
    </style>
</head>
<body>
    <div class="admin-main">
        <blockquote class="layui-elem-quote">
            <a href="javascript:;" class="layui-btn layui-btn-small btn-add">
                <i class="layui-icon"></i> 添加
            </a>
        </blockquote>
        <fieldset class="layui-elem-field">
            <legend>分享家分类</legend>
            <div class="layui-field-box">
                <table class="site-table table-hover">
                    <thead>
                        <tr>
                            <th>名称</th>
                            <th>等级</th>
                            <th>图标</th>
                            <th>分享数量限制</th>
                            <th>备注</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody class="shareCategory-table"></tbody>
                </table>
                <!--分页容器-->
                <div id="pageDiv"></div>
            </div>
        </fieldset>
        <!-- 添加/编辑弹窗 -->
        <div class="shareCategory-pop hide">
            <form class="layui-form">
                <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
                    <legend>分享家分类</legend>
                </fieldset>
                <hidden name="shareCategoryId"></hidden>
                <div class="layui-input-block m-bt-10">
                    <label class="layui-form-label">名称</label>
                    <div class="layui-input-inline">
                        <input type="text" class="layui-input" name="name" placeholder="请输入名称" />
                    </div>
                </div>
                <div class="layui-input-block m-bt-10">
                    <label class="layui-form-label">等级</label>
                    <div class="layui-input-inline">
                        <input type="text" class="layui-input" name="level" placeholder="请输入等级" />
                    </div>
                </div>
                <div class="layui-input-block m-bt-10">
                    <label class="layui-form-label">图标</label>
                    <div class="layui-input-inline" style="width:163px;">
                        <span class="upload-btn layui-btn layui-btn-primary">
                            <i class="layui-icon"></i>上传图标
                        </span>
                        <input id="hideFile" type="file" name="file" class="hide"> 
                    </div>
                    <div class="layui-input-block">
                        <img src="" name="icon" data-url="" />
                    </div>
                </div>
                <div class="layui-input-block m-bt-10">
                    <label class="layui-form-label">分享数量限制</label>
                    <div class="layui-input-inline">
                        <input type="text" class="layui-input" name="number" placeholder="请输入分享数量限制" />
                    </div>
                </div>
                <div class="layui-input-block m-bt-10">
                    <label class="layui-form-label">备注</label>
                    <div class="layui-input-block" style="width:390px;">
                        <textarea type="text" class="layui-textarea" name="remark" placeholder="请输入备注" ></textarea>
                    </div>
                </div>
                <div class="m-20 clearfix">
                    <span class="layui-btn submit-btn fr">确认</span><span class="layui-btn layui-btn-danger close-layer m-lr-10 fr">取消关闭</span>
                </div>
            </form>
        </div>
        <!-- End  添加/编辑弹窗 -->
        <div class="dot-tmp">
            <!-- 表格 -->
            <script class="shareCategory-tmp" type="text/x-dot-template">
                {{ for(var item in it){ }}
                <tr data-id="{{= it[item].ID }}">
                    <td>{{= it[item].Name }}</td>
                    <td>{{= it[item].Level }}</td>
                    <td>
                        <img style="height: 25px; width: 25px;" src="{{= it[item].Icon }}" />
                    </td>
                    <td>{{= it[item].Number }}</td>
                    <td>{{= it[item].Remark }}</td>
                    <td>
                        <span class="layui-btn layui-btn-mini btn-edit" data-id="{{= it[item].ID }}">编辑</span>
                        <span class="layui-btn layui-btn-mini btn-remove" data-id="{{= it[item].ID }}">删除</span>
                    </td>
                </tr>
                {{ } }}
            </script>
        </div>
    </div>
    <script src="~/lay_component/js/jquery-2.0.3.min.js"></script>
    <script src="~/lay_component/js/ajaxfileupload.js"></script>
    <script src="~/lay_component/plugins/layui/layui.js"></script>
    <script src="~/doT-master/doT-master/doT.min.js"></script>
    <script src="~/lay_component/js/hcommon.js"></script>
    <script src="~/Scripts/FlyDog.Common.js"></script>
    <script src="~/lay_component/sampleJs/ShareCategory.js"></script>
</body>
</html>
