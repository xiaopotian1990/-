<!-- 注意：请将要放入弹框的内容放在比如id="HBox"的容器中，然后将box的值换成该ID即可，比如：$(element).hDialog({'box':'#HBox'}); -->
<div id="wrapper">
    <div class="box">
        <!-- 注意：请将要放入弹框的内容放在比如id="HBox"的容器中，然后将box的值换成该ID即可，比如：$(element).hDialog({'box':'#HBox'}); -->
        <div id="HBoxFailtureCategoryAdd" class="HBox">
            <form action="" method="post" class="form-horizontal" onsubmit="return false;" role="form">
                <div class="form-body">
                    <h3 class="header smaller lighter blue col-sm-12"><i class="icon-user"></i>增加未成交类型信息</h3>
                    <div class="form-group">
                        <label class="col-sm-5 control-label no-padding-right" for="form-field-1">未成交类型名称:</label>
                        <div class="col-sm-6">
                            <input id="failtureCategoryNameAdd" type="text" class="col-xs-10 col-sm-5" placeholder="输入未成交类型名称">
                        </div>
                    </div>               
                    <div class="form-group">
                        <label class="col-sm-5 control-label no-padding-right" for="form-field-1">备注:</label>
                        <div class="col-sm-6">
                            <textarea  id="failtureCategoryRemarkAdd" class="form-control" placeholder="备注"></textarea>
                        </div>
                    </div>
                </div>
                <div class="_deptedit col-sm-12">
                    <button onclick="failtureCategorySubmitBtnAdd()" class="btn  btn-success">
                        <i class="icon-ok"></i>
                        提交
                    </button>
                    <button onclick="failtureCategorySubmitBtnClose()"  class="btn btn-danger">
                        <i class="icon-remove icon-only"></i>
                        取消
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $(".btn-danger").on("click", function () {

        $("#HBoxFailtureCategoryAdd").css("display", " none");
        $("#HOverlay").remove();
    });
</script>
<style>
    ._deptedit {
        margin-top: 90px;
        margin-left: 37%;
    }

    textarea {
        resize: none;
    }
</style>