
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>单位设置</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link href="~/lay_component/plugins/layui/css/layui.css" rel="stylesheet" media="all" />
    <link href="~/lay_component/css/layer.css" rel="stylesheet" />
    <link href="~/lay_component/css/global.css" rel="stylesheet" />
    <link href="~/lay_component/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/lay_component/css/table.css" rel="stylesheet" />
 

    <script src="~/lay_component/js/jquery-2.0.3.min.js"></script>
    <script src="~/lay_component/js/hcommon.js"></script>
    <script src="~/doT-master/doT-master/doT.min.js"></script>
    <script src="~/lay_component/plugins/layui/lay/dest/layui.all.js"></script>
    <script src="~/lay_component/plugins/layui/lay/lib/jquery.js"></script>
    <script src="~/lay_component/plugins/layui/lay/modules/layer.js"></script>
   
     <!--页面用添加数据js-->
    <script src="~/lay_component/sampleJs/smartUnit.js"></script>
</head>

<body>
    <div class="admin-main" id="smartUnitHtml">
        <blockquote class="layui-elem-quote">
            <a href="javascript:;" class="layui-btn layui-btn-small" id="add">
                <i class="layui-icon">&#xe608;</i> 添加
            </a>
        </blockquote>

        <fieldset class="layui-elem-field">
            <legend>单位信息</legend>
            <div class="layui-field-box">

            </div>
            <script id="smartUnit_template" type="text/html">
                <table class="site-table table-hover">
                    <thead>
                        <tr>
                            <th>编号</th>
                            <th>名称</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{ for(var prop in it) { }}
                        <tr class="" deptInfoId="{{= it[prop].ID }}">
                            <td>{{= i++ }}</td>
                            <td>{{= it[prop].Name }}</td>
                            <td class="smartUnitInfoEditAndDisableTd">
                                <a class="layui-btn layui-btn-mini smartUnitEdit" id="smartUnitEdit" smartUnitiEditId="{{= it[prop].ID }}"><i></i>编辑</a>

                                <a class="layui-btn layui-btn-mini smartUnitDel" id="smartUnitDel" smartUnitDelId="{{= it[prop].ID }}"><i></i>删除</a>
                            </td>
                        </tr>

                        {{ } }}
                    </tbody>
                </table>
            </script>

        </fieldset>
    </div>
    <script src="~/lay_component/plugins/layui/layui.js"></script>


    <!--添加单位信息-->

    <div id="showSmartUnitAddInfo_div"></div>

    <script id="showSmartUnitAddInfo_template" type="text/x-dot-template">

        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
            <legend>添加单位信息</legend>
        </fieldset>
        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">单位名称</label>
            <div class="layui-input-inline ">
                <input type="text" id="smartUnitInfoEditName" lay-verify="title" autocomplete="off" placeholder="请输入单位名称" class="layui-input ">
            </div>
        </div>

        <div class="layui-form-item " style="margin-left: 219px;margin-top: 40px">
            <button class="layui-btn layui-btn-normal smartUnitAdd_commit">确认提交</button>
            <button class="layui-btn layui-btn-danger dept_close">取消关闭</button>
        </div>
    </script>

    <!--修改单位信息-->

    <script id="showSmartUnitEditInfo_template" type="text/x-dot-template">

        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
            <legend>修改单位信息</legend>
        </fieldset>
        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">单位名称</label>
            <div class="layui-input-inline ">
                <input type="text" id="smartUnitEditID" lay-verify="title" autocomplete="off" style="display:none;" value="{{=it.ID}}" class="layui-input ">
                <input type="text" id="smartUnitEditName" lay-verify="title" autocomplete="off" placeholder="请输入单位名称" value="{{=it.Name}}" class="layui-input ">
            </div>
        </div>
        <div class="layui-form-item " style="margin-left: 219px;margin-top: 40px">
            <button class="layui-btn layui-btn-normal smartUnitEdit_commit">确认提交</button>
            <button class="layui-btn layui-btn-danger dept_close">取消关闭</button>
        </div>
    </script>

    <div id="showsmartUnitEditInfo_div"></div>
</body>

</html>
