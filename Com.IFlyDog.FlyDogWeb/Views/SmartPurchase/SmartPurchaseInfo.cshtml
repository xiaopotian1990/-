                                    $(".layui-btn.layui-btn-danger.dept_close")
                                        .on("click",
                                            function () {
                                                $("#smartPurchaseEditInfo_div").html("");

                                                layer.close(index1);
                                            });
                                    $("#smartPurchaseDetailADDBut").on("click",function () {
                                        layer.open({
                                            type: 2,
                                            title: "选择药物品",
                                            closeBtn: 1, //不显示关闭按钮
                                            shade: [0],
                                            area: ["60%", "85%;min-height:500px;max-height:600px"],
                                            anim: 2,
                                            content: ['SmartPurchaseDetailIndex', 'no'] //iframe的url，no代表不显示滚动条
                                        });
                                    });
                                    //删除TR按钮
                                    $(document)
                                        .on("click",
                                            ".trDelete",
                                            function () {
                                                $('li.selected').nextAll('li');
                                                $(this).parent().parent().remove();
                                                productId = Common.Utils.Array.remove(productId, $(this).parents("tr").attr("value"));
                                            });
                                    //确认提交
                                    $(".layui-btn.layui-btn-normal.smartPurchaseEdit_commit")
                                        .on("click",
                                            function () {

                                                //确认提交按钮
                                                var datalist = [];

                                                var tr = $("#smartPurchaseDetailTD tr");

                                                if (tr.length < 1) {
                                                    layer.msg("请添加药物品！", { icon: 5 });
                                                    return false;
                                                }

                                                for (var i = 0; i < tr.length; i++) {

                                                    if (Common.StrUtils.isNullOrEmpty($(".batch").val())) {
                                                        layer.msg("请填写批号~", { icon: 2 });
                                                        return false;
                                                    } else if ($(".batch").val().length > 50) {
                                                        layer.msg("批号长度不能超过50！", { icon: 2 });
                                                        return false;
                                                    }
                                                    if (Common.StrUtils.isNullOrEmpty(tr.eq(i).find("td").eq(7).children().val())) {
                                                        layer.msg("请填写有效日期~", { icon: 2 });
                                                        return false;
                                                    }
                                                    //这里的js应该有问题
                                                    var obj = { ProductID: "", Num: "", Price: "", Amount: "", Batch: "", Expiration: "" };

                                                    obj.ProductID = tr.eq(i).attr("value"); //药物品id
                                                    obj.Num = $(tr.eq(i).find("td").eq(3)).children().val(); //数量
                                                    obj.Price = tr.eq(i).find("td").eq(4).children().val(); //价格
                                                    obj.Amount = obj.Num * obj.Price; //总价
                                                    obj.Batch = tr.eq(i).find("td").eq(6).children().val();//批号
                                                    obj.Expiration = tr.eq(i).find("td").eq(7).children().val();//有效期
                                                    datalist.push(obj);
                                                };


                                                //获取值
                                                var id = $("#smartPurchaseID").val();
                                                var smartEditWarehouse = $("#smartEditWarehouse").val();
                                                var smartEditSupplier = $("#smartEditSupplier").val();
                                                var smartPurchaseEditDate = $("#dateEditName").val();
                                                var remarkEditValue = $("#remarkEditValue").val();

                                                var realData = {};
                                                realData.ID = id;
                                                realData.WarehouseID = smartEditWarehouse;
                                                realData.SupplierID = smartEditSupplier;
                                                realData.CreateTime = smartPurchaseEditDate;
                                                realData.Status = "1";
                                                realData.Remark = remarkEditValue;
                                                realData.SmartPurchaseDetail = datalist;

                                                var paraObj = new Object();
                                                paraObj.data = realData;
                                                var url = "/SmartPurchase/SmartPurchaseEdit";
                                                var data = ajaxProcess(url, paraObj);

                                                if (data) {
                                                    if (parseInt(data.ResultType) === 0) { //请求成功返回

                                                        $("#smartPurchaseEditInfo_div").html("");
                                                        var message = data.Message;
                                                        //关闭窗口
                                                        layer.close(index1);
                                                        //提示信息
                                                        layer.msg(message, { icon: 6 });
                                                        //刷新主页面数据.
                                                        setTimeout(function () {
                                                            location.reload();
                                                        }, 1500);
                                                    } else {
                                                        //请求成功返回,但是后台出现错误
                                                        layer.msg(data.Message, { icon: 5 });
                                                    }
                                                }
                                                return false;
                                            });
                                }, cancel: function (index1) {
                                    $("#smartPurchaseEditInfo_div").html("");

                                    layer.close(index1);
                                }
                            });
                        }

                    });
        });

