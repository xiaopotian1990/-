                                    var html = "";

                                    for (var i = 0; i < data.Data.SmartPurchaseDetail.length; i++) {
                                        html += "   <tr value=" +
                            data.Data.SmartPurchaseDetail[i].ProductID +
                            " class='ele-text-c'>" +
                            "<td>" +
                            data.Data.SmartPurchaseDetail[i].ProductName +
                            "</td>" +
                            "<td>" +
                             data.Data.SmartPurchaseDetail[i].Size +
                            "</td>" +
                            "<td>" +
                             data.Data.SmartPurchaseDetail[i].UnitName +
                            "</td>" +
                             "<td> <input type='text' id='productCount' class='layui-input' value='" + data.Data.SmartPurchaseDetail[i].Num + "' " + (data.Data.Status == 1 ? " disabled " : "") + " style='width:60px;'/> </td>" +
                             "</td>" +
                             "<td><input type='text' id='productPrice' class='layui-input' value='" + data.Data.SmartPurchaseDetail[i].Price + "' " + (data.Data.Status == 1 ? " disabled " : "") + " style='width:60px;'/></td>" +
                             "<td><label id='lableZPrice'>" + data.Data.SmartPurchaseDetail[i].Amount + "</label></td>" +
                              "<td><input type='text' class='layui-input batch' value='" + data.Data.SmartPurchaseDetail[i].Batch + "'  " + (data.Data.Status == 1 ? " disabled " : "") + "  style='width:40px;'/></td>" +//批号
                               "<td><input type='text' name='date' id='date' lay-verify='date' value='" + data.Data.SmartPurchaseDetail[i].Expiration + "' placeholder='进货日期' style='width:60px;' "+(data.Data.Status==1?" disabled ":"")+" autocomplete='off' class='layui-input' onclick='layui.laydate({ elem: this, min: \"1900-01-01 00:00:00\" })'></td>" +

                            "<td hidden='hidden' id='smartWarehouseRemarkTdhidden'>" +
                            data.Data.SmartPurchaseDetail[i].ID +
                            "</td>" +
                            "<td>" +
                            "<a href='javascript:' class='layui-btn layui-btn-danger layui-btn-mini trDelete'>删除</a>" +
                            "</td>" +
                            "</tr>";
