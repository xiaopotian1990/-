@using Com.IFlyDog.FlyDogWeb.Helper
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>病例模板</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Styles/Public/base-1.0.css" rel="stylesheet" />
    <link href="~/lay_component/plugins/layui/css/layui.css" rel="stylesheet" media="all" />
    <link href="~/lay_component/css/global.css" rel="stylesheet" />
    <style>
        .layui-input-block.m-bt-10 {
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <div class="admin-main">
        <blockquote class="layui-elem-quote">
            <a href="javascript:;" class="layui-btn layui-btn-small btn-add">
                <i class="layui-icon"></i> 添加
            </a>
        </blockquote>
        <fieldset class="layui-elem-field">
            <legend>病例模板</legend>
            <div class="layui-form m-20">
                <div class="layui-input-inline">
                    <label class="layui-form-label">标题</label>
                    <div class="layui-input-inline">
                        <input type="text" class="layui-input" id="titleValue" name="s-title" placeholder="请输入标题" />
                    </div>
                </div>
                <span class="layui-btn search-btn fr">查询</span>
            </div>
            <div class="layui-field-box">
                <table class="site-table table-hover">
                    <thead>
                        <tr>
                            <th>标题</th>
                            <th>备注</th>
                            <th>状态</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody class="caseTemplate-table"></tbody>
                </table>
                <!--分页容器-->
                <div id="pageDiv"></div>
            </div>
        </fieldset>
        <!-- 添加/编辑弹窗 -->
        <div class="caseTemplate-pop hide">
            <form class="layui-form">
                <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
                    <legend>病例模板</legend>
                </fieldset>
                <hidden name="caseTemplateId"></hidden>
                <div class="layui-input-block m-bt-10">
                    <label class="layui-form-label">标题</label>
                    <div class="layui-input-inline" style="margin-left:11px;">
                        <input type="text" class="layui-input" name="title" placeholder="请输入标题" />
                    </div>
                </div>
                <div class="layui-input-block m-bt-10">
                    <label class="layui-form-label">状态</label>
                    <div class="layui-input-inline" style="margin-left:11px;width:163px;">
                        <select name="status">
                            <option value="1">启用</option>
                            <option value="0">停用</option>
                        </select>
                    </div>
                </div>

                <div class="layui-input-block m-bt-10">
                    <label class="layui-form-label">备注</label>
                    <div class="layui-input-inline " style="margin-left:11px;">
                        <textarea type="text" id="remarkValue" name="remarkValue" lay-verify="title" autocomplete="off" placeholder="请输入备注信息" class="layui-textarea "></textarea>

                    </div>
                </div>
                <div class="layui-input-block m-bt-10">
                    <label class="layui-form-label">内容</label>
                    <div class="layui-input-block" style="margin:0 50px 0 120px;">
                        <textarea id="caseTemplateContent" style="width:100%;min-height:260px;"></textarea>
                    </div>
                </div>
                <div class="m-20 clearfix">
                    <span class="layui-btn caseTemplate submit-btn fr">确认</span><span class="layui-btn layui-btn-danger close-layer m-lr-10 fr">取消关闭</span>
                </div>
            </form>
        </div>
        <!-- End  添加/编辑弹窗 -->

        <!-- 查看弹窗 -->
        <div class="caseTemplates-pop hide" id="sels">
            <hidden name="knowledgeId"></hidden>
            <div class="layui-input-block m-bt-10" style="text-align:center;font-size:25px;">
                <p name="caseTemplateTitle" style=""></p>
            </div>

            <div class="layui-input-block m-bt-10 clearfix">
                <div class="layui-input-inline " name="divNR" style="margin:0 50px;">
                    <textarea id="selContent" name="selContent" style="width:100%;min-height:260px;"></textarea>

                </div>
            </div>
            <div class="m-20 clearfix">
                <span class="layui-btn knowledge dept_close fr">取消关闭</span>
            </div>
        </div>

        <!-- End -->

        <div class="dot-tmp">
            <!-- 病例模板表格 -->
            <script class="caseTemplate-tmp" type="text/x-dot-template">
                {{ for(var prop in it){ }}
                <tr data-id="{{= it[prop].ID }}">
                    <td>{{= it[prop].Title }}</td>
                    <td>{{= it[prop].Remark }}</td>
                    <td>{{=it[prop].OpenStatus == 1?"使用":"停用" }}</td>
                    <td>
                        <span class="layui-btn layui-btn-mini btn-edit" data-id="{{= it[prop].ID }}">编辑</span>
                        <span class="layui-btn layui-btn-mini btn-sel" data-id="{{= it[prop].ID }}">查看</span>
                    </td>
                </tr>
                {{ } }}
            </script>
        </div>
    </div>
    <script src="~/lay_component/js/jquery-2.0.3.min.js"></script>
    <script src="~/UEditer/ueditor.config.js"></script>
    <script src="~/UEditer/ueditor.all.min.js"></script>
    <script src="~/UEditer/lang/zh-cn/zh-cn.js"></script>
    <script src="~/lay_component/js/hcommon.js"></script>
    <script src="~/Scripts/FlyDog.Common.js"></script>
    <script src="~/doT-master/doT-master/doT.min.js"></script>
    <script src="~/lay_component/plugins/layui/layui.js"></script>
    <script src="~/lay_component/sampleJs/caseTemplate.js"></script>
</body>
</html>
