@using Com.IFlyDog.FlyDogWeb.Helper
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>客户组管理</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Styles/Public/base-1.0.css" rel="stylesheet" />
    <link href="~/lay_component/plugins/layui/css/layui.css" rel="stylesheet" media="all" />
    <link href="~/lay_component/css/global.css" rel="stylesheet" />
</head>
<body>
    <div class="admin-main">
        <blockquote class="layui-elem-quote">
            <a href="javascript:;" class="layui-btn layui-btn-small btn-add">
                <i class="layui-icon"></i> 添加
            </a>
        </blockquote>
        <fieldset class="layui-elem-field">
            <legend>客户组管理</legend>
            <div class="layui-form m-10 clearfix">
                <div class="fl">
                    <label class="layui-form-label">名称</label>
                    <div class="layui-input-inline">
                        <input class="layui-input" name="sName" placeholder="请输入名称">
                    </div>
                </div>
                <span class="layui-btn search-btn fr">查询</span>
            </div>
            <div class="layui-field-box">
                <table class="site-table table-hover">
                    <thead>
                        <tr>
                            <th>名称</th>
                            <td>备注</td>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody class="customerGroup-table"></tbody>
                </table>
            </div>
        </fieldset>
        <div class="page-pops">
            <!-- 添加/编辑弹窗 -->
            <div class="customerGroup-pop hide">
                <!-- 会员类型/ -->
                <!-- 分享家/ -->
                <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
                    <legend>客户组</legend>
                </fieldset>
                <form class="layui-form customerGroup-form"></form>
                <div class="m-20 clearfix">
                    <span class="layui-btn customerGroup submit-btn fr">确认</span><span class="layui-btn layui-btn-danger close-layer m-lr-10 fr">取消关闭</span>
                </div>
            </div>
            <!-- End  添加/编辑弹窗 -->

        </div>

        <div class="dot-tmp">
            <!-- 用户通知表格 -->
            <script class="customerGroup-tmp" type="text/x-dot-template">
                {{ for(var item in it){ }}
                <tr data-id="{{= it[item].ID }}">
                    <td>{{= it[item].Name }}</td>
                    <td>{{= it[item].Remark }}</td>
                    <td>
                        <span class="layui-btn layui-btn-mini btn-edit" data-id="{{= it[item].ID }}">编辑</span>
                        <span class="layui-btn layui-btn-mini btn-editGroup" data-id="{{= it[item].ID }}" data-name="{{= it[item].Name }}">管理分组</span>
                    </td>
                </tr>
                {{ } }}
            </script>
            <!-- 用户通知表单 -->
            <script class="customerGroup-form-tmp" type="text/x-dot-template">
                <input type="hidden" name="ID" value="{{= it.ID }}" />
                <div class="layui-input-block m-bt-10">
                    <label class="layui-form-label">名称</label>
                    <div class="layui-input-inline">
                        <input type="text" class="layui-input" name="Name" value="{{= it.Name }}" placeholder="请输入名称" />
                    </div>
                </div>
                <div class="layui-input-block m-bt-10">
                    <label class="layui-form-label">备注</label>
                    <div class="layui-input-inline">
                        <textarea class="layui-textarea" name="Remark" placeholder="请输入备注">{{= it.Remark }}</textarea>
                    </div>
                </div>
            </script>

        </div>
    </div>
    <script src="~/lay_component/js/jquery-2.0.3.min.js"></script>
    <script src="~/lay_component/js/hcommon.js"></script>
    <script src="~/Scripts/FlyDog.Common.js"></script>
    <script src="~/doT-master/doT-master/doT.min.js"></script>
    <script src="~/lay_component/plugins/layui/layui.js"></script>
    <script src="~/lay_component/sampleJs/customerGroup.js"></script>
</body>
</html>
