
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>供应商设置</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link href="~/lay_component/plugins/layui/css/layui.css" rel="stylesheet" media="all" />
    <link href="~/lay_component/css/layer.css" rel="stylesheet" />
    <link href="~/lay_component/css/global.css" rel="stylesheet" />
    <link href="~/lay_component/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/lay_component/css/table.css" rel="stylesheet" />
 

    <script src="~/lay_component/js/hcommon.js"></script>
    <script src="~/lay_component/js/jquery-2.0.3.min.js"></script>
    <script src="~/doT-master/doT-master/doT.min.js"></script>
    <script src="~/lay_component/plugins/layui/lay/dest/layui.all.js"></script>
    <script src="~/lay_component/plugins/layui/lay/lib/jquery.js"></script>
    <script src="~/lay_component/plugins/layui/lay/modules/layer.js"></script>

    <!--页面用添加数据js-->
    <script src="~/lay_component/sampleJs/smartSupplier.js"></script>
</head>

<body>
    <div class="admin-main" id="smartSupplierHtml">
        <blockquote class="layui-elem-quote">
            <a href="javascript:;" class="layui-btn layui-btn-small" id="add">
                <i class="layui-icon">&#xe608;</i> 添加
            </a>
        </blockquote>

        <fieldset class="layui-elem-field">
            <legend>供应商信息</legend>
            <div class="layui-field-box">

            </div>
            <script id="smartSupplier_template" type="text/html">
                <input type="hidden" id="pageCountValue" lay-verify="title" autocomplete="off"  class="layui-input " value="">
                <div class="layui-form-item">
                   
                    <div class="layui-input-block" >
                       
                        <p style="float:left;margin-left:-150px;">
                            <label class="layui-form-label">拼音码</label>
                            <input type="text" name="title" lay-verify="title" id="pinYinValue" autocomplete="off" placeholder="请输入拼音码" style="width:130px;" class="layui-input">
                        </p>
                        <p style="float:left;">
                            <label class="layui-form-label">名称</label>
                            <input type="text" name="title" lay-verify="title" id="nameValue" autocomplete="off" placeholder="请输入名称" style="width:130px;" class="layui-input">
                        </p>
                        <button class="layui-btn" id="subtmValue" onclick="aa()" style="float:left;margin-left:140px;">查询</button>
                    </div>

                 
                    @*<div class="layui-input-block">
                    
                    </div>*@

                   
                </div>

                <table class="site-table table-hover">
                    <thead>
                        <tr>
                            @*<th>供应商编号</th>*@
                            <th>供应商名称</th>
                            <th>拼音码</th>
                            <th>联系人</th>
                            <th>联系方式</th>
                            <th>描述</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{ for(var prop in it) { }}
                        <tr class="" deptInfoId="{{= it[prop].ID }}">
                            @*<td>{{= i++ }}</td>*@
                            <td>{{= it[prop].Name }}</td>
                            <td>{{= it[prop].PinYin }}</td>
                            <td>{{= it[prop].LinkMan }}</td>
                            <td>{{= it[prop].Contact }}</td>
                            <td>{{= it[prop].Remark }} </td>
                            <td class="smartSupplierInfoEditAndDisableTd">
                                <a class="layui-btn layui-btn-mini smartSupplierEdit" id="smartSupplierEdit" smartSupplieriEditId="{{= it[prop].ID }}"><i></i>编辑</a>

                                <a class="layui-btn layui-btn-mini smartSupplierDel" id="smartSupplierDel" smartSupplierDelId="{{= it[prop].ID }}"><i></i>删除</a>
                            </td>
                        </tr>

                        {{ } }}
                    </tbody>
                   
                </table>
                <!--分页容器-->
                <div id="pageDiv"></div>
            </script>

        </fieldset>
    </div>
    <script src="~/lay_component/plugins/layui/layui.js"></script>


    <!--添加供应商信息-->

    <div id="showSmartSupplierAddInfo_div"></div>

    <script id="showSmartSupplierAddInfo_template" type="text/x-dot-template">

        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
            <legend>添加供应商信息</legend>
        </fieldset>
        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">供应商名称</label>
            <div class="layui-input-inline ">
                <input type="text" id="smartSupplierInfoName" lay-verify="title" autocomplete="off" placeholder="请输入供应商名称" class="layui-input ">
            </div>
        </div>

        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">拼音码</label>
            <div class="layui-input-inline ">
                <input type="text" id="pinYinMaInfoName" lay-verify="title" autocomplete="off" placeholder="请输入拼音码" class="layui-input ">
            </div>
        </div>

        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">联系人</label>
            <div class="layui-input-inline ">
                <input type="text" id="linkManInfoName" lay-verify="title" autocomplete="off" placeholder="请输入联系人" class="layui-input ">
            </div>
        </div>

        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">联系方式</label>
            <div class="layui-input-inline ">
                <input type="text" id="conTactInfoName" lay-verify="title" autocomplete="off" placeholder="请输入联系方式" class="layui-input ">
            </div>
        </div>

        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">备注</label>
            <div class="layui-input-inline ">
                <textarea id="remarkValue" lay-verify="title" autocomplete="off" placeholder="请输入备注信息" class="layui-textarea "></textarea>
            </div>
        </div>

        <div class="layui-form-item " style="margin-left: 219px;margin-top: 40px">
            <button class="layui-btn layui-btn-normal smartSupplierAdd_commit">确认提交</button>
            <button class="layui-btn layui-btn-danger dept_close">取消关闭</button>
        </div>
    </script>

    <!--修改供应商信息-->

    <script id="showSmartSupplierEditInfo_template" type="text/x-dot-template">

        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
            <legend>修改供应商信息</legend>
        </fieldset>
        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">供应商名称</label>
            <div class="layui-input-inline ">
                <input type="text" id="smartSupplierEditID" lay-verify="title" autocomplete="off" style="display:none;" value="{{=it.ID}}" class="layui-input ">
                <input type="text" id="smartSupplierEditName" lay-verify="title" autocomplete="off" placeholder="请输入供应商名称" value="{{=it.Name}}" class="layui-input ">
            </div>
        </div>

        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">拼音码</label>
            <div class="layui-input-inline ">
                <input type="text" id="pinYinMaInfoEditName" lay-verify="title" autocomplete="off" value="{{=it.PinYin}}" placeholder="请输入拼音码" class="layui-input ">
            </div>
        </div>

        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">联系人</label>
            <div class="layui-input-inline ">
                <input type="text" id="linkManInfoEditName" lay-verify="title" autocomplete="off" value="{{=it.LinkMan}}" placeholder="请输入联系人" class="layui-input ">
            </div>
        </div>

        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">联系方式</label>
            <div class="layui-input-inline ">
                <input type="text" id="conTactInfoEditName" lay-verify="title" autocomplete="off" value="{{=it.Contact}}" placeholder="请输入联系方式" class="layui-input ">
            </div>
        </div>
        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">备注</label>
            <div class="layui-input-inline ">
                <textarea type="text" id="remarkEditValue" lay-verify="title" autocomplete="off" placeholder="请输入备注信息" class="layui-textarea">{{=it.Remark}}</textarea>
            </div>
        </div>
        <div class="layui-form-item " style="margin-left: 219px;margin-top: 40px">
            <button class="layui-btn layui-btn-normal smartSupplierEdit_commit">确认提交</button>
            <button class="layui-btn layui-btn-danger dept_close">取消关闭</button>
        </div>
    </script>

    <div id="showsmartSupplierEditInfo_div"></div>


</body>

</html>
