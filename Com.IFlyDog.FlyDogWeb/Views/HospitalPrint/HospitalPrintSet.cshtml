@using Com.IFlyDog.FlyDogWeb.Helper
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>打印设置</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Styles/Public/base-1.0.css" rel="stylesheet" />
    <link href="~/lay_component/plugins/layui/css/layui.css" rel="stylesheet" media="all" />
    <link href="~/lay_component/css/global.css" rel="stylesheet" />
    <style>
        .layui-form-label {
            width: 100px;
        }

        .hospital-table a {
            color: #3598dc !important;
        }

        .hospital-table a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="admin-main">
        <blockquote class="layui-elem-quote">
            <a href="/HospitalPrint/HospitalPrintInfo" class="layui-btn layui-btn-small">
                <i class="layui-icon"></i> 返回
            </a>
        </blockquote>
        <fieldset class="layui-elem-field">
            <legend>打印设置</legend>
            <div class="layui-field-box">
                <table class="site-table table-hover">
                    <thead>
                        <tr>
                            <th>内容</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody class="printDetail-table"></tbody>
                </table>
            </div>
        </fieldset>
        <!-- 添加/编辑弹窗 -->
        <div class="printDetail-pop hide">
            <form class="layui-form">
                <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
                    <legend>编辑打印设置</legend>
                </fieldset>
                <blockquote class="layui-elem-quote relative">
                    <span class="PrintExplain"></span>
                </blockquote>
                <div class="layui-input-block m-bt-10">
                    <label class="layui-form-label">宽度</label>
                    <div class="layui-input-inline">
                        <input class="layui-input" name="Width" placeholder="请输入宽度">
                    </div>
                </div>
                <div class="layui-input-block m-bt-10">
                    <label class="layui-form-label">字体大小</label>
                    <div class="layui-input-inline">
                        <input class="layui-input" name="FontSize" placeholder="请输入字体大小">
                    </div>
                </div>
                <div class="layui-input-block m-bt-10" style="z-index: 19891018;">
                    <label class="layui-form-label">字体</label>
                    <div class="layui-input-inline" style="width:163px;">
                        <select name="FontFamily">
                            <option value="宋体">宋体</option>
                            <option value="楷体">楷体</option>
                            <option value="微软雅黑">雅黑</option>
                            <option value="黑体">黑体</option>
                            <option value="隶书">隶书</option>
                        </select>
                    </div>
                </div>
                <hidden name="printDetailId"></hidden>
                <script id="container" type="text/plain" style="width:96%;margin:0 auto;">
                </script>
                <span class="layui-btn submit-btn fr">确认</span><span class="layui-btn layui-btn-danger close-layer m-lr-10 fr">取消关闭</span>
            </form>
        </div>
        <!-- End  添加/编辑弹窗 -->
        <div class="dot-tmp">
            <!-- 套餐表格 -->
            <script class="printDetail-tmp" type="text/x-dot-template">
                {{ for(var item in it){ }}
                <tr>
                    <td>{{= it[item].Content }}</td>
                    <td>
                        <span class="layui-btn layui-btn-small btn-edit" data-id="{{= it[item].ID }}" >编辑</span>
                    </td>
                </tr>
                {{ } }}
            </script>
        </div>
    </div>
    <script src="~/lay_component/js/jquery-2.0.3.min.js"></script>
    <script src="~/UEditer/ueditor.config.js"></script>
    <script src="~/UEditer/ueditor.all.min.js"></script>
    <script src="~/UEditer/lang/zh-cn/zh-cn.js"></script>
    <script src="~/lay_component/js/hcommon.js"></script>
    <script src="~/Scripts/FlyDog.Common.js"></script>
    <script src="~/doT-master/doT-master/doT.min.js"></script>
    <script src="~/lay_component/plugins/layui/layui.js"></script>
    <script src="~/lay_component/sampleJs/HospitalPrint.js"></script>
</body>
</html>
