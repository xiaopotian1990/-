@using Com.IFlyDog.FlyDogWeb.Helper
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>标签组管理</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Styles/Public/base-1.0.css" rel="stylesheet" />
    <link href="~/lay_component/plugins/layui/css/layui.css" rel="stylesheet" media="all" />
    <link href="~/lay_component/css/global.css" rel="stylesheet" />
</head>
<body>
    <div class="admin-main">
        <blockquote class="layui-elem-quote">
            <a href="javascript:;" class="layui-btn layui-btn-small btn-add">
                <i class="layui-icon"></i> 添加
            </a>
        </blockquote>
        <fieldset class="layui-elem-field">
            <legend>标签分组项目</legend>
            <div class="layui-field-box">
                <table class="site-table table-hover">
                    <thead>
                        <tr>
                            <th>名称</th>
                            <th>描述</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody class="tagGroup-table"></tbody>
                </table>
                <!--分页容器-->
                <div id="pageDiv"></div>
            </div>
        </fieldset>
        <!-- 添加/编辑弹窗 -->
        <div class="tagGroup-pop hide">
            <form class="layui-form">
                <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
                    <legend>标签组</legend>
                </fieldset>
                <hidden name="tagGroupId"></hidden>
                <div class="m-bt-10">
                    <label class="layui-form-label">名称</label>
                    <div class="layui-input-inline">
                        <input type="text" class="layui-input" name="name" placeholder="请输入名称" />
                    </div>
                </div>
                <div class="m-bt-10">
                    <label class="layui-form-label">备注</label>
                    <div class="layui-input-inline ">
                        <textarea type="text" class="layui-textarea remark" name="remark" lay-verify="title" autocomplete="off" placeholder="请输入备注信息"></textarea>
                    </div>
                </div>
                <div class="m-bt-10">
                    <label class="layui-form-label"></label>
                    <div class="layui-input-inline " style="width:500px;">

                        <table class="site-table table-hover">
                            <thead>
                                <tr>
                                    <th>名称</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody class="tags-table"></tbody>
                        </table>
                    </div>
                </div>
                <div class="m-20 clearfix" style="margin-left:0;">
                    <label class="layui-form-label"></label>
                    <span class="layui-btn add-detail-btn fl">增加</span>
                    <span class="layui-btn tagGroup submit-btn fr">确认</span><span class="layui-btn layui-btn-danger close-layer m-lr-10 fr">取消关闭</span>
                </div>
            </form>
        </div>
        <!-- End  添加/编辑弹窗 -->
        <!-- 选择标签弹窗 -->
        <div class="tag-pop hide">
            <form >
                <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
                    <legend>选择标签</legend>
                </fieldset>
                <div class="m-20">
                    <table class="site-table table-hover">
                        <thead>
                            <tr>
                                <th>选择</th>
                                <th>名称</th>
                            </tr>
                        </thead>
                        <tbody class="tag-table"></tbody>
                    </table>
                </div>
                <div class="m-20 clearfix">
                    <span class="layui-btn tag submit-btn fr">确认</span><span class="layui-btn layui-btn-danger close-layer m-lr-10 fr">取消关闭</span>
                </div>
            </form>
        </div>
        <!-- End 选择标签弹窗 -->
        <div class="dot-tmp">
            <!-- 标签组表格 -->
            <script class="tagGroup-tmp" type="text/x-dot-template">
                {{ for(var item in it){ }}
                <tr data-id="{{= it[item].ID }}">
                    <td>{{= it[item].Name }}</td>
                    <td>{{= it[item].Remark }}</td>
                    <td>
                        <span class="layui-btn layui-btn-mini btn-edit" data-id="{{= it[item].ID }}">编辑</span>
                        <span class="layui-btn layui-btn-mini btn-remove" data-id="{{= it[item].ID }}">删除</span>
                    </td>
                </tr>
                {{ } }}
            </script>
            <!-- 标签组弹窗的标签表格 -->
            <script class="tags-tmp" type="text/x-dot-template">
                {{ for(var item in it){ console.log(it);}}
                <tr tagID="{{= it[item].TagID }}">
                    <td>{{= it[item].TagName }}</td>
                    <td><span class="layui-btn layui-btn-mini remove-btn" data-id="{{= it[item].TagID }}">删除</span></td>
                </tr>
                {{ } }}
            </script>
            <!-- 标签弹窗 -->
            <script class="tag-tmp" type="text/x-dot-template">
                {{ for(var item in it){ }}
                <tr tagID="{{= it[item].ID }}">
                    <td><input type="checkbox" value="{{= it[item].ID }}" title="{{= it[item].Content }}" /></td>
                    <td>{{= it[item].Content }}</td>
                </tr>
                {{ } }}
            </script>
        </div>
    </div>
    <script src="~/lay_component/js/jquery-2.0.3.min.js"></script>
    <script src="~/lay_component/js/hcommon.js"></script>
    <script src="~/Scripts/FlyDog.Common.js"></script>
    <script src="~/doT-master/doT-master/doT.min.js"></script>
    <script src="~/lay_component/plugins/layui/layui.js"></script>
    <script src="~/lay_component/sampleJs/TagGroup.js"></script>
</body>
</html>
