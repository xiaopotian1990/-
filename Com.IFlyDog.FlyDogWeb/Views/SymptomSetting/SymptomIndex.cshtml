<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>症状信息</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link href="~/lay_component/plugins/layui/css/layui.css" rel="stylesheet" media="all" />
    <link href="~/lay_component/css/layer.css" rel="stylesheet" />
    <link href="~/lay_component/css/layer1.css" rel="stylesheet" />
    <link href="~/lay_component/css/global.css" rel="stylesheet" />
    <link href="~/lay_component/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/lay_component/css/table.css" rel="stylesheet" />
 
</head>

<body>
    <div class="admin-main" id="symptomSettinghtml">
        <blockquote class="layui-elem-quote">
            <a href="javascript:;" class="layui-btn layui-btn-small" id="symptomSettingAdd">
                <i class="layui-icon">&#xe608;</i> 添加症状信息
            </a>
        </blockquote>

        <fieldset class="layui-elem-field">
            <legend>症状信息</legend>
            <div class="layui-field-box">

            </div>
            <script id="symptomSetting_template" type="text/html">
                <table class="site-table table-hover">
                    <thead>
                        <tr>
                            <th>症状编号</th>
                            <th>症状名称</th>
                            <th>症状状态</th>
                            <th>症状序号</th>
                            <th>症状描述</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{ for(var prop in it) { }}
                        <tr class="" infoID="{{= it[prop].ID }}">
                            <td>{{= i++ }}</td>
                            <td>{{= it[prop].Name }}</td>
                            <td>
                                {{ if (it[prop].Status !=0){ }}
                                <i class="layui-icon" style="color: green;"></i>
                                {{ } else { }}
                                <i class="layui-icon" style="color: red;">ဇ</i>
                                {{ } }}

                            </td>
                            <td>{{= it[prop].SortNo }}</td>
                            <td>{{= it[prop].Remark }}</td>
                            <td class="symptomSettingEditAndDisableTd">
                                <a class="layui-btn layui-btn-mini edit" id="symptomSettingInfoiEdit" InfoiEditId="{{= it[prop].ID }}"><i></i>编辑</a>

                                {{ if (it[prop].Status ==0){ }}
                                <a href="javascript:;" stopID="{{= it[prop].ID }}" status="1" data-opt="del" class="layui-btn layui-btn-normal layui-btn-mini EditStopBut">启用</a>
                                {{ } else { }}

                                <a href="javascript:;" stopID="{{= it[prop].ID }}" status="0" data-opt="del" class="layui-btn layui-btn-danger layui-btn-mini EditStopBut">停用</a>


                                {{ } }}
                            </td>
                        </tr>

                        {{ } }}
                    </tbody>
                </table>
            </script>

        </fieldset>
    </div>
    <!--公共JS-->
    <script src="~/lay_component/js/jquery-2.0.3.min.js"></script>
    <script src="~/lay_component/js/hcommon.js"></script>
    <script src="~/doT-master/doT-master/doT.min.js"></script>
    <script src="~/lay_component/plugins/layui/lay/dest/layui.all.js"></script>
    <script src="~/lay_component/plugins/layui/lay/lib/jquery.js"></script>
    <script src="~/lay_component/plugins/layui/lay/modules/layer.js"></script>
    <script src="~/lay_component/sampleJs/symptomSetting.js"></script>
    <!--添加信息-->
    <div id="showsymptomSettingAddInfo_div"></div>
    <script id="showsymptomSettingAddInfo_template" type="text/x-dot-template">

        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
            <legend>添加症状信息</legend>
        </fieldset>
        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">名称</label>
            <div class="layui-input-inline ">
                <input type="text" id="symptomSettingAddName" lay-verify="title" autocomplete="off" placeholder="请输入名称" class="layui-input ">
            </div>
        </div>
        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">排序号</label>
            <div class="layui-input-inline ">
                <input type="text" id="symptomSettingAddSortNo" lay-verify="title" autocomplete="off" placeholder="请输入排序号" class="layui-input ">
            </div>
        </div>
        <div class="layui-form-item layui-form-text" style="margin-left: 120px">
            <label class="layui-form-label">描述</label>
            <div class="layui-input-inline">
                <textarea id="symptomSettingAddRemark" placeholder="请输入描述内容" class="layui-textarea"></textarea>
            </div>
        </div>
        <div class="layui-form-item " style="margin-left: 219px;margin-top: 40px">
            <button class="layui-btn layui-btn-normal dept_commit">确认提交</button>
            <button class="layui-btn layui-btn-danger dept_close">取消关闭</button>
        </div>
    </script>

    <!--修改信息-->
    <script id="showsymptomSettingEditInfo_template" type="text/x-dot-template">

        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
            <legend>修改症状信息</legend>
        </fieldset>
        <div class="layui-form-item" style="margin-left: 120px" hidden>
            <label class="layui-form-label">编号</label>
            <div class="layui-input-inline ">
                <input type="text" id="symptomSettingEditID" lay-verify="title" autocomplete="off" disabled="disabled" value="{{= it.ID}}" class="layui-input ">
            </div>
        </div>
        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">名称</label>
            <div class="layui-input-inline ">
                <input type="text" id="symptomSettingEditName" lay-verify="title" autocomplete="off" placeholder="请输入名称" value="{{= it.Name}}" class="layui-input ">
            </div>
        </div>
        <div class="layui-form-item" style="margin-left: 120px">
            <label class="layui-form-label">排序号</label>
            <div class="layui-input-inline ">
                <input type="text" id="symptomSettingEditSortNo" lay-verify="title" autocomplete="off" placeholder="请输入排序号" value="{{= it.SortNo}}" class="layui-input ">
            </div>
        </div>
        <div class="layui-form-item layui-form-text" style="margin-left: 120px">
            <label class="layui-form-label">描述</label>
            <div class="layui-input-inline">
                <textarea id="symptomSettingEditRemark" placeholder="请输入描述内容" class="layui-textarea">{{=it.Remark}}</textarea>
            </div>
        </div>
        <div class="layui-form-item " style="margin-left: 219px;margin-top: 40px">
            <button class="layui-btn layui-btn-normal dept_commit">确认提交</button>
            <button class="layui-btn layui-btn-danger dept_close">取消关闭</button>
        </div>
    </script>
    <div id="showsymptomSettingEditInfo_div"></div>

</body>

</html>